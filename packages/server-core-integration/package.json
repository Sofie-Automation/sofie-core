		"@types/underscore": "^1.10.24",
		"codecov": "^3.8.0",
		"copyfiles": "^2.4.0",
		"gh-pages": "^3.1.0",
		"jest": "^26.6.0",
		"node-license-validator": "^1.3.0",
		"npm-scripts-info": "^0.3.9",
		"open-cli": "^6.0.1",
		"standard-version": "^9.0.0",
		"trash-cli": "^3.1.0",
		"ts-jest": "^26.4.4",
		"tslint": "^6.1.3",
		"tslint-config-standard": "^9.0.0",
		"typescript": "~4.0"
	},
	"keywords": [
		"broadcast",
		"socket",
		"typescript",
